<% content_for :stylesheets do %>
<%= stylesheet_link_tag 'home' %>
<% end %>


<div class="hero">
  <h1>TuParqueo.com en:</h1>
  <form class="form-inline" method="GET" action="/parkings">
    <div class="form-group">
      <input type="text" name="direccion" class="form-control" placeholder ="Direccion" />
    </div>
    <div class="form-group">
        <input type="date" name="fecha_inicio"  value="" class="form-control" placeholder ="fecha_inicio" />
      </div>
    
    <div class="form-group">
      <select class="form-control" name="distrito">
        <option value="0">:: Todos ::</option>
        <% @district.each do |district| %>
          <option value="<%= district.id %>">
            <%= district.nombre %>
          </option>
        <% end %>
      </select>
    </div>
    
    <div class="form-group">
      <button class="btn btn-success">Buscar</button>
    </div>
  </form>
  <br>
  </br>
</div>


<div class="container" id="list-thumbnail">
  <div class="row text-center">
    <div class="col-md-3">
      <a href="#">
        <%= image_tag 'informacion-servicio' , :class=> 'img-responsive' %>
        <div class="caption">
          <h3>Información del servicio</h3>
        </div>                
       </a>
    </div>
            
    <div class="col-md-3">
      <a href="#">
        <%= image_tag 'terminos-y-condiciones' , :class=> 'img-responsive'%>
        <h3>Términos y condiciones de uso</h3>
       </a>
    </div>
    
    <div class="col-md-3">'
      <a href="/home/testimonio">
        <%= image_tag 'testimonios' , :class=> 'img-responsive'%>
        <h3>Testimonios</h3>
     </a>
    </div>  
    <div class="col-md-3">
      <a href="#">
        <%= image_tag 'preguntas-y-respuestas' , :class=> 'img-responsive'%>
        <h3>Preguntas y respuestas frecuentes</h3>
       </a>
    </div>            
  </div>
</div>