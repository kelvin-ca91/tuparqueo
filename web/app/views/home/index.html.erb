<% content_for :stylesheets do %>
<%= stylesheet_link_tag 'home' %>
<% end %>


<div class="hero">
  <h1>TuParqueo.com en:</h1>
  <%= form_tag("/parkings", method: "get", class: 'form-inline') do %>
  
    <div class="form-group">
      <%= text_field_tag( :direccion) %>
    </div>
    
    <div class="form-group">
      
      <%= select("distrito",'id' ) do %>
        <% @district.each do |district| %>
          <%= content_tag(:option, district.nombre, value: district.id) %>
        <% end %>
      <% end %>
    </div>
    
    <div class="form-group">
      <%= submit_tag("Buscar", class: 'btn btn-success') %>
    </div>
  <% end %>
  <br>
  </br>
</div>


<div class="container" id="list-thumbnail">
  <div class="row text-center">
    <div class="col-md-3">
      <a href="#">
        <%= image_tag 'informacion-servicio' , :class=> 'img-responsive' %>
        <div class="caption">
          <h3>Información del servicio</h3>
        </div>                
       </a>
    </div>
            
    <div class="col-md-3">
      <a href="#">
        <%= image_tag 'terminos-y-condiciones' , :class=> 'img-responsive'%>
        <h3>Términos y condiciones de uso</h3>
       </a>
    </div>
    
    <div class="col-md-3">'
      <a href="/home/testimonio">
        <%= image_tag 'testimonios' , :class=> 'img-responsive'%>
        <h3>Testimonios</h3>
     </a>
    </div>  
    <div class="col-md-3">
      <a href="#">
        <%= image_tag 'preguntas-y-respuestas' , :class=> 'img-responsive'%>
        <h3>Preguntas y respuestas frecuentes</h3>
       </a>
    </div>            
  </div>
</div>