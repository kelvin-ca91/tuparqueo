<div class="container">
  <div class="row">
    <div class='col-md-4 col-sm-offset-4 '>
      
      <div class="panel panel-primary">
        <div class="panel-heading">Registrar una Cuenta</div>
        <div class="panel-body">
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            
            <div class="form-group">
              <%= link_to 'Entrar con Facebook', user_facebook_omniauth_authorize_path(), :class => 'btn btn-primary form-control' %> 
            </div>
            

        
            <div class="form-group">
              <%= f.label :nombre %>
              <%= f.text_field :nombre , autofocus: true, :class => "form-control", :placeholder => "Nombre y Apellido" %>
            </div>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, :class => "form-control", :placeholder => "Correo" %>
            </div>

            <div class="form-group">

              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "off" ,:class => "form-control", :placeholder => "Confirmar Password" %>
            </div>
            <div class="form-group">
              <%= f.submit :Registrar, :class => "form-control btn btn-success" %>
            </div>
          <% end %>
        </div>
        <div class="panel-footer">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>




